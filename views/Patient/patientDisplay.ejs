<div class="container">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-8">
            <h2>
              <b>Patients </b>List
              <a href="/admin/ADDPatient" class="">
                <i class="fas fa-plus-circle" style="color:green"></i>
              </a>
            </h2>
          </div>
          <div class="col-sm-4">
            <div class="search-box">
              <form action="/admin/SearchPatient" method="post" target="myFrame" id="myForm">
              <i class="material-icons" type="submit">&#xE8B6;</i>
              <input
                type="text"
                class="form-control"
                placeholder="Search&hellip;"
                name="id"
                id="id"
              />
            </form>
            </div>
          </div>
        </div>
        <br>
        <br>
    <table class="table table-striped table-hover table-bordered">
      <% include ../partials/messages %>
        <thead>
          <tr>
           <!-- <th>ID </th>-->
            <th>Name </th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if(typeof patients != 'undefined'){ %> <%
          patients.forEach(function(patient) { %>
          <tr>
            <!--<td><%= patient.id%></td>-->
            <td><%= patient.name%></td>
            <td><%= patient.email%></td>
            <td>
              <a
                href="/admin/ViewPatient/<%=patient.email%>"
                class="view"
                title="View"
                data-toggle="tooltip"
                ><i class="material-icons">&#xE417;</i></a
              >
              <a
                href="/admin/UpdatePatient/<%=patient.email%>"
                class="edit"
                title="Edit"
                data-toggle="tooltip"
                ><i class="material-icons">&#xE254;</i></a
              >
              <a
                href="/admin/ReceviedPatient/<%=patient.email%>"
                class="receviedblood"
                title="ReceviedBlood"
                data-toggle="tooltip"
                ><i class="fa fa-bell-o" style="font-size:24px"></i></a
              >
              <a
                href="/admin/PatientDelete/<%=patient.email%>"
                class="delete"
                title="Delete"
                data-toggle="tooltip"
                ><i class="material-icons">&#xE872;</i></a
              >
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
      <div class="clearfix">
        <div class="hint-text">Showing <b><%=patients.length%></b> out of <b><%=total%></b> entries</div>
        <ul class="pagination">
          <li class="page-item disabled">
            <a href="#"><i class="fa fa-angle-double-left"></i></a>
          </li>
          <li class="page-item"><a href="/admin/DisplayPatient/1" class="page-link">1</a></li>
          <li class="page-item"><a href="/admin/DisplayPatient/2" class="page-link">2</a></li>
          <li class="page-item"><a href="/admin/DisplayPatient/3" class="page-link">3</a></li>
          <li class="page-item"><a href="/admin/DisplayPatient/4" class="page-link">4</a></li>
          <li class="page-item"><a href="/admin/DisplayPatient/5" class="page-link">5</a></li>
          <li class="page-item"><a href="#" class="page-link"><i class="fa fa-angle-double-right"></i ></a>
           </li>
        </ul>
      </div>
    </div>
</div>
  